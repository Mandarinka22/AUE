<Window x:Class="DimplomApp.WindowsProject.DescriptionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimplomApp.WindowsProject"
        mc:Ignorable="d"
        Title="DescriptionDialog" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#666666">
        <StackPanel Margin="10">
            <TextBlock Foreground="White" Text="Введите описание:" FontSize="14"/>
            <TextBox x:Name="DescriptionTextBox" Height="30" Margin="0 10 0 10" FontSize="14"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Foreground="White" Background="#FF5D5B5B" BorderBrush="Black" Content="OK" Width="80" Click="OKButton_Click"/>
                <Button Foreground="White" Background="#FF5D5B5B" BorderBrush="Black" Content="Отмена" Width="80" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
